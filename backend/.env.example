# Boneca Backend Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
PROJECT_NAME=Boneca
VERSION=0.1.0
API_PREFIX=/api/v1
ENVIRONMENT=development
PYTHONPATH=/app

# Database Configuration
# For Docker environment, use 'postgres' as host (service name)
# For local development outside Docker, use 'localhost'
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=boneca
DATABASE_USER=boneca
DATABASE_PASSWORD=boneca
DATABASE_SCHEMA=boneca

# Optional: Direct database URL (if provided, overrides individual settings)
# DATABASE_URL=postgresql://boneca:boneca@postgres:5432/boneca
